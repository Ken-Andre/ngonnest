{
  "version": 2,
  "builds": [
    {
      "src": "api/bot.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/bot",
      "dest": "api/bot.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/bot.py"
    }
  ],
  "env": {
    "TELEGRAM_TOKEN": "@telegram_token",
    "GITHUB_TOKEN": "@github_token",
    "GITHUB_REPO": "Ken-Andre/ngonnest"
  }
}
